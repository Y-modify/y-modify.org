  keywords: "電子工作,YamaX,ヒューマノイド"
}) %>
<body>
  <%- include("ejs/common/_header") %>
  <main role="main">
    <%- include("ejs/_slider", { items: [
      {
        title: "YamaX",
        description: t("A Humanoid for Hobby"),
        image: "/images/back3.jpg",
      },
      {
        title: "Ozone OS",
        description: t("Bring your favorite distro to the Intel Edison"),
        image: "/images/ozoneb.jpg",
      },
      {
        title: "Enjoy making.",
        description: t("We are just doing our hobbies like jobs, but it's not jobs."),
        image: "/images/back1.jpg",
      }
      ]}) %>
    <div class="intro">
      <div class="socials">
        <a href="https://twitter.com/ymodify314" target="_blank"><i class="fa fa-twitter fa-lg"></i></a>
        <a href="https://www.facebook.com/Ymodify314" target="_blank"><i class="fa fa-facebook fa-lg"></i></a>
        <a href="https://plus.google.com/u/0/b/109945619381118132728/+YmodifyOrg314/" target="_blank"><i class="fa fa-google-plus fa-lg"></i></a>
