<li class="herounit">
  <div class="herounit--image js-scroll-animation" style="background-image: url('<%= background %>');"></div>
  <div class="herounit--description">
    <h3>
      <%= subtitle %>
    </h3>
    <h1>
      <%= title %>
    </h1>
    <div class="herounit--about">
      <%- about.replace(/[\n\r]/g, "<br>"); %>
      <ul>
        <% points.forEach(function (value) { %>
        <li><%= value %></li>
        <% }); %>
      </ul>
    </div>
    <% buttons.forEach(function (value) { %>
    <a class="btn
      <% if(typeof(value.className)!='undefined'){ %>
        <%= value.className %>
      <% } %>
    " href="<%= value.href %>"
    ><%= value.string %></a>
    <% }); %>
  </div>
</li>
